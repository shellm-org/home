#!/usr/bin/env bash

shellm include shellm/shellman/lib/shellman.sh

[ $# -eq 0 ] && shellman_usage

main() {
  case "$1" in
    ## \option -h, --help
    ## Print this help and exit.
    -h|--help) shellman "$0"; exit 0 ;;
  esac

  local script="${1:-$0}"

  # shellcheck disable=SC2154
  local data_dir="${SHELLM_HOME}/data/${script##*/}"

  if [ ! -d "${data_dir}" ]; then
    mkdir -p "${data_dir}"
  fi
  
  echo "${data_dir}"
}

main "$@"
